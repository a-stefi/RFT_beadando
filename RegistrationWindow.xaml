<Window x:Class="ATMApp.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Regisztráció" Height="570" Width="500">
    <Grid>
        <Label Content="Felhasználónév:" HorizontalAlignment="Left" Margin="63,48,0,0" VerticalAlignment="Top" Height="34" FontSize="18" Width="147" Foreground="#FFFFD205" FontWeight="Bold"/>
        <TextBox x:Name="usernameBox" HorizontalAlignment="Left" Margin="249,48,0,0" VerticalAlignment="Top" Width="212" Height="34" FontSize="18"/>

        <Label Content="Fiókszám:" HorizontalAlignment="Left" Margin="115,101,0,0" VerticalAlignment="Top" Height="35" FontSize="18" Width="97" Foreground="#FFFFD205" FontWeight="Bold"/>
        <TextBox x:Name="accountNumberBox" HorizontalAlignment="Left" Margin="249,101,0,0" VerticalAlignment="Top" Width="212" Height="35" FontSize="18"/>

        <Label Content="PIN kód:" HorizontalAlignment="Left" Margin="126,153,0,0" VerticalAlignment="Top" Height="34" FontSize="18" Width="87" Foreground="#FFFFD205" FontWeight="Bold"/>
        <PasswordBox x:Name="pinBox" HorizontalAlignment="Left" Margin="249,153,0,0" VerticalAlignment="Top" Width="212" Height="34" FontSize="18"/>

        <Label Content="Telefonszám:" HorizontalAlignment="Left" Margin="91,206,0,0" VerticalAlignment="Top" Height="33" FontSize="18" Width="122" Foreground="#FFFFD205" FontWeight="Bold"/>
        <TextBox x:Name="phoneNumberBox" HorizontalAlignment="Left" Margin="249,212,0,0" VerticalAlignment="Top" Width="212" Height="30" FontSize="18"/>

        <Label Content="Születési hely:" HorizontalAlignment="Left" Margin="81,258,0,0" VerticalAlignment="Top" Height="34" FontSize="18" Width="131" Foreground="#FFFFD205" FontWeight="Bold"/>
        <TextBox x:Name="birthPlaceBox" HorizontalAlignment="Left" Margin="249,258,0,0" VerticalAlignment="Top" Width="212" Height="34" FontSize="18"/>

        <Label Content="Születési idő:" HorizontalAlignment="Left" Margin="91,314,0,0" VerticalAlignment="Top" Height="34" FontSize="18" Width="122" Foreground="#FFFFD205" FontWeight="Bold"/>
        <DatePicker x:Name="birthDatePicker" HorizontalAlignment="Left" Margin="249,318,0,0" VerticalAlignment="Top" Width="212" Height="30" FontSize="18"/>

        <Button Content="Regisztráció" HorizontalAlignment="Center" Margin="0,426,0,0" VerticalAlignment="Top" Width="140" Click="RegisterButton_Click" FontSize="20" BorderBrush="#FFFFD205" Background="#FFFFD205" Foreground="White" FontWeight="Bold" Height="35"/>
        <Button Content="Vissza" HorizontalAlignment="Center" Margin="0,485,0,0" VerticalAlignment="Top" Width="76" Click="BackButton_Click" Background="White" BorderBrush="White" Foreground="#FFFFD205" FontWeight="Bold" FontSize="20"/>

        <Label x:Name="errorLabel" Content="" Foreground="Red" HorizontalAlignment="Center" Margin="0,370,0,0" VerticalAlignment="Top" FontSize="18" Width="350"/>
    </Grid>
</Window>
