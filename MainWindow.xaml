<Window x:Class="ATMApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ATM Bejelentkezés" Height="450" Width="600">
    <Grid Margin="0,0,0,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="213*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="194*"/>
            <ColumnDefinition Width="341*"/>
        </Grid.ColumnDefinitions>
        <Image Margin="90,36,5,12" Source="bank_logo.png" Stretch="Fill" Grid.Column="1"/>
        <Label Content="Ráfázol Bank" HorizontalAlignment="Left" Margin="5,36,0,0" VerticalAlignment="Top" FontSize="30" Grid.Column="2" Height="52" Width="200" Foreground="Black" FontWeight="Bold"/>

        <Label Content="Fiókszám:" HorizontalAlignment="Left" Margin="39,24,0,0" VerticalAlignment="Top" FontSize="20" Grid.Column="1" Height="35" Width="105" Grid.Row="1" Foreground="#FFFFD205" FontWeight="Bold"/>
        <TextBox x:Name="accountNumberBox" HorizontalAlignment="Left" Margin="16,26,0,0" VerticalAlignment="Top" Width="150" Grid.Column="2" Height="31" Grid.Row="1" FontSize="18"/>

        <Label Content="PIN kód:" HorizontalAlignment="Left" Margin="54,73,0,0" VerticalAlignment="Top" FontSize="20" Height="35" Width="90" Grid.Row="1" Foreground="#FFFFD205" FontWeight="Bold" Grid.Column="1"/>
        <PasswordBox x:Name="pinBox" HorizontalAlignment="Left" Margin="16,75,0,0" VerticalAlignment="Top" Width="150" Grid.Column="2" Height="31" Grid.Row="1" FontSize="18"/>

        <Button Content="Bejelentkezés" HorizontalAlignment="Left" Margin="16,194,0,0" VerticalAlignment="Top" Width="150" Click="LoginButton_Click" Background="#FFFFD202" Grid.Column="2" Height="33" Grid.Row="1" Foreground="White" FontSize="20" BorderBrush="#FFFFD205" FontWeight="Bold"/>
        <Button Content="Regisztráció" HorizontalAlignment="Left" Margin="16,247,0,0" VerticalAlignment="Top" Width="150" Click="RegisterButton_Click" Height="35" Grid.Row="1" FontSize="20" Background="White" BorderBrush="White" Foreground="#FFFFD205" FontWeight="Bold" Grid.Column="2"/>
        
        <Label x:Name="errorLabel" Content="" Foreground="Red" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" Grid.Column="2" Grid.Row="1" Width="240" Height="26"/>

        <Button x:Name="ForgotPasswordButton" Content="Elfelejtett PIN kód?" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="30" Click="ForgotPasswordButton_Click" Grid.Row="1" Grid.Column="2" Background="White" BorderBrush="#FFFFFFFB" Foreground="#FFFFD205" Margin="16,106,0,0"/> 
    </Grid>
</Window>
