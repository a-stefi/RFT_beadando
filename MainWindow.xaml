<Window x:Class="ATMApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ATM Bejelentkezés" Height="450" Width="600">
    <Grid Margin="0,0,0,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="213*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="194*"/>
            <ColumnDefinition Width="341*"/>
        </Grid.ColumnDefinitions>
        <Image Margin="90,36,5,12" Source="bank_logo.png" Stretch="Fill" Grid.Column="1"/>
        <Label Content="Ráfázol Bank" HorizontalAlignment="Left" Margin="5,36,0,0" VerticalAlignment="Top" FontSize="30" Grid.Column="2" Height="52" Width="200" Foreground="Black" FontWeight="Bold"/>
    </Grid>
</Window>
